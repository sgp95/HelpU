<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/colorAccent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txt_code_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/img_user"
        android:text="User Code"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_date_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_code_user"
        android:layout_toRightOf="@id/img_user"
        android:layout_marginTop="6dp"
        android:text="24:00" />

    <TextView
        android:id="@+id/txt_solution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_user"
        android:text="Queja:"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/txt_solution">
    <TextView
        android:id="@+id/txt_complaint_area"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Contenido de la queja que el usaurio realiza" />
    </ScrollView>

    <ImageView
        android:id="@+id/img_complaint"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/utp"
        android:layout_below="@id/scroll_view"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>



</RelativeLayout>